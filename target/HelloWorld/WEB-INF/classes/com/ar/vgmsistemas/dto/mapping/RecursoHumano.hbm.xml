<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ar.vgmsistemas.dto">
    <class name="RecursoHumano" table="rrhh" where="sn_activo='S'" abstract="false">
        <id name="id" type="long" access="field">
            <column name="id_legajo" />
            <generator class="assigned" />
        </id>
        <property name="apellido" type="string" column="de_apellido" />
        <property name="nombre" type="string" column="de_nombres" />
        <property name="domicilio" type="string" column="de_domicilio" />
        <property name="nuTelefono" type="string" column="nu_telefono" />
        <property name="nuCelular" type="string" column="nu_celular" />
        <property name="nuCuil" type="string" column="nu_cuil" />
        <property name="tiDocumento" type="string" column="ti_documento" />
        <property name="numeroDocumento" type="string" column="nu_documento" />
        <property name="deEmail" type="string" column="de_email" />
        <property name="idCategoria" type="integer" column="id_categoria" />
        <property name="taVenta" type="float" column="ta_venta" />
        <property name="isActivo" type="string" column="sn_activo"/>
        <property name="feNacimientoSqlite" type="string" column="fe_nacimiento"/>
        <property name="nuSueldo" type="float" column="nu_sueldo" />
        <property name="feIngresoSqlite" type="string" column="fe_ingreso"/>
        <property name="feEgresoSqlite" type="string" column="fe_egreso"/>
        <property name="deLogin" type="string" column="de_login"/>
        <property name="taComision" type="float" column="ta_comision"/>
        <property name="password" type="string" column="de_password" />
        <property name="horaEntradaMananaSqlite" type="string" column="fe_tp_dma" />
        <property name="horaSalidaMananaSqlite" type="string" column="fe_tp_hma" />
        <property name="horaEntradaTardeSqlite" type="string" column="fe_tp_dta" />
        <property name="horaSalidaTardeSqlite" type="string" column="fe_tp_hta" />
        <property name="idPostal" type="long" column="id_postal" />
        <property name="idSucursal" type="long" column="id_sucursal" />
        

    </class>
    
